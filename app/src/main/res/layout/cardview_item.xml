<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/cardview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textSize="25sp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/cardview_director_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textSize="13sp"
            android:layout_below="@+id/cardview_title"
            android:layout_alignLeft="@+id/cardview_title"
            android:layout_alignStart="@+id/cardview_title" />

        <TextView
            android:id="@+id/cardview_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director"
            android:textSize="13sp"
            android:layout_alignTop="@+id/cardview_director_from"
            android:layout_toRightOf="@+id/cardview_director_from"
            android:layout_toEndOf="@+id/cardview_director_from"
            android:layout_marginLeft="3dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
